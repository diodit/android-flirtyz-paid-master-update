<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owo.phlurtyzpaid">
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/flirtyzlauncher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <!--Content Provide-->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.owo.phlurtyzpaid"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />

        </provider>

        <!--Activities-->
        <activity android:name="com.owo.phlurtyzpaid.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.owo.phlurtyzpaid.activity.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name="com.owo.phlurtyzpaid.activity.MainModActivity"
            android:label="@string/title_activity_main" />
        <activity android:name="com.owo.phlurtyzpaid.activity.WelcomeActivity" />
        
        <activity android:name="com.owo.phlurtyzpaid.activity.FavoriteActivity"
                  android:label="@string/favorite_title">

        </activity>

        <activity
            android:name="com.owo.phlurtyzpaid.activity.SpecialsActivity"
            android:label="@string/title_activity_special" />

        <activity android:name="com.owo.phlurtyzpaid.activity.RecentActivity"
                  android:label="@string/recent_title">

        </activity>

        <activity
            android:name="com.owo.phlurtyzpaid.activity.RecentModActivity"
            android:label="@string/recent_title" />

        <activity
            android:name="com.owo.phlurtyzpaid.activity.SuggestionActivity"
            android:label="@string/suggestion_title">
        </activity>

        <activity
            android:name="com.owo.phlurtyzpaid.activity.LoginActivity"
            android:label="@string/login_title">
        </activity>

        <activity
            android:name="com.owo.phlurtyzpaid.activity.ProfileActivity"
            android:label="@string/profile_title">
        </activity>

        <activity
            android:name="com.owo.phlurtyzpaid.activity.CategoriesActivity"
            android:label="@string/title_activity_categories" />


        <!--Broadcast Receiver-->
        <receiver android:name=".broadcastReceiver.NetworkChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>


</manifest>